generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("TEST_DATABASE_URL") 
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  name     String
  password String
  role     String
}

model reminder {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  completed   Boolean
  dateCreated DateTime @db.Date
  dateDue     DateTime?
  description String
  title       String
  userId      String   @db.ObjectId
}



